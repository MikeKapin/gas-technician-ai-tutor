# Production Environment Variables
# These will be set in Vercel dashboard

# AI Configuration
NEXT_PUBLIC_AI_PROVIDER=anthropic
NEXT_PUBLIC_CLAUDE_MODEL=claude-3-sonnet-20240229
NEXT_PUBLIC_ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# App Configuration
NEXT_PUBLIC_APP_URL=https://gas-tutor.larklabs.org
NEXT_PUBLIC_API_URL=https://gas-tutor.larklabs.org/api

# Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=${GA_MEASUREMENT_ID}
NEXT_PUBLIC_POSTHOG_KEY=${POSTHOG_KEY}

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_FEEDBACK=true
NEXT_PUBLIC_DEBUG=false

# LARK Labs Integration
NEXT_PUBLIC_LARK_LABS_URL=https://www.larklabs.org
NEXT_PUBLIC_INTEGRATION_MODE=embedded