# Gas Technician AI Tutor - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:5000

# OpenAI API Key (if using OpenAI)
NEXT_PUBLIC_OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key (if using Claude)
NEXT_PUBLIC_ANTHROPIC_API_KEY=your-anthropic-claude-api-key-here

# Preferred AI Provider (openai or anthropic)
NEXT_PUBLIC_AI_PROVIDER=anthropic

# Model Configuration
NEXT_PUBLIC_OPENAI_MODEL=gpt-4-turbo-preview
NEXT_PUBLIC_CLAUDE_MODEL=claude-3-sonnet-20240229

# Development Settings
NODE_ENV=development

# Feature Flags
NEXT_PUBLIC_ENABLE_VOICE_INPUT=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_DEBUG=false

# LARK Labs Integration (optional)
NEXT_PUBLIC_LARK_LABS_URL=https://www.larklabs.org
NEXT_PUBLIC_INTEGRATION_MODE=standalone